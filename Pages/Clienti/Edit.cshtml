@page
@model Kovacs_Adela_Licenta.Pages.Clienti.EditModel

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link rel="stylesheet" href="~/css/IngredienteCreateEdit.css" asp-append-version="true" />
</head>

<body>
    <p></p>
    <p></p>
    <div class="title-wrapper">
        <h1>Edit</h1>
        <h4> - Members</h4>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Client.ID" />
                <div class="form-group">
                    <label asp-for="Client.Nume" class="control-label"></label>
                    <input asp-for="Client.Nume" class="form-control" placeholder="First name" />
                    <span asp-validation-for="Client.Nume" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.Prenume" class="control-label"></label>
                    <input asp-for="Client.Prenume" class="form-control" placeholder="Last name"/>
                    <span asp-validation-for="Client.Prenume" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.Email" class="control-label"></label>
                    <input asp-for="Client.Email" readonly class="form-control" placeholder="Email"/>
                    <span asp-validation-for="Client.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.Telefon" class="control-label"></label>
                    <input asp-for="Client.Telefon" class="form-control" placeholder="Phone"/>
                    <span asp-validation-for="Client.Telefon" class="text-danger"></span>
                </div>
                <p></p>
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center">
        <a asp-page="./Index">Back to List</a>
    </div>

</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
